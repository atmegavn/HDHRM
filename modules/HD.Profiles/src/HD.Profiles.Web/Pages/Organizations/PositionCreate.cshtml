@page
@using HD.Profiles.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProfilesResource> Localizer

@model HD.Profiles.Web.Pages.Organizations.PositionCreateModel
@{

}

<form class="needs-validation" asp-action="@ViewContext.RouteData.Values["action"]" method="post" role="form" novalidate>
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="@Url.Page("Index")">Position</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
                <h4 class="page-title">Create new position</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-sm btn-primary btn-">
                <span class="mdi mdi-content-save"></span> @Localizer["Save"]
            </button>

            <a href="@Html.Raw(Model.BackUrl)" class="btn btn-sm btn-secondary">
                <span class="mdi mdi-keyboard-return"></span> @Localizer["Back"]
            </a>
        </div>
    </div>
    <hr />
    @{
        if (ViewData["Exception"] != null)
        {
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        <i class="ri-close-circle-line me-2"></i> @ViewData["Exception"]
                    </div>
                </div>
            </div>
        }
    }
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <div class="mb-3">
                    <label  class="form-label">@Localizer["Job"]</label>
                    <input type="text" class="form-control" placeholder="Job Name">
                </div>
                <div class="mb-3">
                    <label class="form-label">@Localizer["Level"]</label>
                    <input type="text" class="form-control" placeholder="Fresher Junior Senior...">
                </div>
                <div class="mb-3">
                    <label  class="form-label">@Localizer["Name"]</label>
                    <input type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label">@Localizer["Description"]</label>
                    <textarea class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">@Localizer["Requirement"]</label>
                    <textarea class="form-control"></textarea>
                </div>
            </div>
        </div>
        <div class="col-6"></div>
    </div>
</form>
