@page

@using HD.Profiles.Localization
@using Microsoft.Extensions.Localization
@using HD.Profiles.Organizations

@inject IStringLocalizer<ProfilesResource> Localizer

@model HD.Profiles.Web.Pages.Organizations.AddPositionModel
@{
    ViewBag.Title = @Localizer["Add Position"].ToString();
}


<form id="create-story-form" class="needs-validation" asp-action="@ViewContext.RouteData.Values["action"]" method="post" role="form" novalidate>
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="@Url.Page("Index")">@Localizer["Organization"] </a></li>
                        <li class="breadcrumb-item active">@Localizer["Edit"]</li>
                    </ol>
                </div>
                <h4 class="page-title">@Localizer["Add Position"] @Model.Form.Name</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-sm btn-primary btn-">
                <span class="mdi mdi-content-save"></span> @Localizer["Save"]
            </button>

            <a href="@Html.Raw(Model.Form.BackUrl)" class="btn btn-sm btn-secondary">
                <span class="mdi mdi-keyboard-return"></span> @Localizer["Back"]
            </a>
        </div>
    </div>
    <hr />
    @{
        if (ViewData["Exception"] != null)
        {
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        <i class="ri-close-circle-line me-2"></i> @ViewData["Exception"]
                    </div>
                </div>
            </div>
        }
    }
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <div class="mb-3">
                    <label asp-for="Form.Amount" class="form-label">@Localizer["Amount"]</label>
                    <input type="number" asp-for="Form.Amount" class="form-control" required>
                    <span asp-validation-for="Form.Amount"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Form.JobPositionId" class="form-label">@Localizer["Job Position"]</label>
                    <select asp-for="Form.JobPositionId" asp-items="Model.Positions" class="form-control"></select>
                    <span asp-validation-for="Form.JobPositionId"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Form.Name" class="form-label">@Localizer["Name"]</label>
                    <input type="text" asp-for="Form.Name" class="form-control" required>
                    <span asp-validation-for="Form.Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Form.JobDescription" class="form-label">@Localizer["Job Description"]</label>
                    <textarea asp-for="Form.JobDescription" class="form-control" placeholder="Description of job here"></textarea>
                    <span asp-validation-for="Form.JobDescription"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Form.JobRequirement" class="form-label">@Localizer["Job Requirement"]</label>
                    <textarea asp-for="Form.JobRequirement" class="form-control" placeholder="Requirement of job here"></textarea>
                    <span asp-validation-for="Form.JobRequirement"></span>
                </div>
               
                <input type="text" asp-for="Form.OrganizationId" class="gu-hide">
                <input type="text" asp-for="Form.BackUrl" class="gu-hide">
            </div>
        </div>
    </div>
</form>

